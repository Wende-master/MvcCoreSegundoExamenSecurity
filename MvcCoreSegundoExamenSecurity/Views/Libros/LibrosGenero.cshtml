@model List<Libro>

@{
    ViewData["Title"] = "Libros";
}

<h1> Libros </h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Titulo
            </th>
            <th>
                Autor
            </th>
            <th>
                Editorial
            </th>
            <th>
                Portada
            </th>
            <th>
                Resumen
            </th>
            <th>
                Precio
            </th>
            <th>
                IdGenero
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdLibro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Autor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Editorial)
                </td>
                <td>
                    <img src="~/images/@Html.DisplayFor(modelItem => item.Portada)" width="200" height="200" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Resumen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdGenero)
                </td>
                <td>
                    <a class="btn btn-secondary" asp-controller="Libros" asp-action="Detalles" asp-route-idlibro="@item.IdLibro">
                        Detalles
                    </a>

                    <a class="btn btn-success w-100"
                       asp-controller="Libros" asp-action="Detalles"
                       asp-route-idlibro="@item.IdLibro">
                        Comprar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>